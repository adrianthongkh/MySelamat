<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myselamat">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySelamat">
        <activity
            android:name=".ViewProfileActivity"
            android:exported="true" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".HomeIsolationResultActivity"
            android:label="Home Isolation Message" />
        <activity android:name=".VaccineActivity" />
        <activity android:name=".VaccineQuestionActivity"/>
        <activity android:name=".VaccineResultsActivity"/>
        <activity
            android:name=".HomeIsolationActivity"
            android:label="Home Isolation" />

        <activity android:name=".RiskEvaluationActivity" />
        <activity android:name=".RiskEvaluationQuestionActivity"/>
        <activity android:name=".RiskEvaluationResultsActivity"/>

        <activity android:name=".UpdateDetailsActivity" />
        <activity android:name=".RiskPredictionActivity" />
        <activity android:name=".HistoryActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>