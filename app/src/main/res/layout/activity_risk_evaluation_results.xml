<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    tools:context=".RiskEvaluationResultsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:paddingTop="220dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="140dp"
        android:textColor="#000"
        android:fontFamily="casual"
        android:layout_margin="16dp"
        android:id="@+id/rGrade"
        android:text="Low Risk \n Just a common cold, no worries, rest up and you will be well soon. Stay Safe :)"
        android:gravity="center_horizontal" />


    <Button
        android:layout_below="@+id/rGrade"
        android:id="@+id/rRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry Evaluation"
        android:padding="20dp"
        android:layout_margin="4dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rRetry"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Back to Home"
        android:id="@+id/rBack"/>

</RelativeLayout>